<?xml version="1.0" encoding="UTF-8"?>
<phpunit colors="true" stopOnError="true" stopOnFailure="true" strict="true">
	<filter>
        <whitelist>
            <directory suffix=".php">../../bll</directory>
        </whitelist>
	</filter>
	
	<logging>
		<log type="coverage-html" target="./report/coverage" charset="UTF-8" yui="true" highlight="true" lowUpperBound="50" highLowerBound="80" />
		<log type="testdox-html" target="./report/test.html" />    
    </logging>
</phpunit>